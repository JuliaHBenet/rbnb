
<!-- In case the pet hasn't got a photo -->
<%  if @pet.photo == nil
      @photo = 'https://static.pexels.com/photos/371633/pexels-photo-371633.jpeg'
    end %>

<!-- Show page of the pet -->

<%= render 'shared/banner_pet_show', pet_name: @pet.name, pet_category: @pet.category.downcase, landscape_photo: "http://wallpapereasy.com/wp-content/uploads/2014/10/landscape-image-wallpaper-1920x1200.jpg", pet: @pet %>

<%= link_to "Book now", new_pet_booking_path(@pet) %>


<%= link_to "Back to all", pets_path %>

<% if current_user == @user %>
  <%= link_to "Edit pet's profile", edit_pet_path(@pet) %>
<% end %>

