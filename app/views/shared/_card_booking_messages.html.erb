<!-- Bookings user made -->

<div class="message bookings-element">
  <div class="image-cropper">
    <%= cl_image_tag booking.pet.photo.path, class:"dog-img"%>
  </div>
  <%= link_to "", pet_path(booking) %>
  <div class="message-name">
    <h3><%= booking.user.first_name %> <%= booking.user.last_name %></h3>
    <p>10/07/17</p>
  </div>
  <div class="message-body">
    <p>
      <%= booking.user.first_name %> <%= booking.user.last_name %> made a booking request for <%= booking.pet.name %>!
    </p>
  </div>
  <div class="message-status">
      <% if  booking.status == 2 %>
        <% status = "Denied" %>
        <% statusclass = "denied" %>
      <% elsif booking.status == 1 %>
        <% status = "Accepted" %>
        <% statusclass = "accepted" %>
      <% else %>
        <% status = "Pending" %>
        <% statusclass = "pending" %>
      <% end %>
      <p class=statusclass>Booking status: <%= status %></p>
    <p class="price">Booking price: <%= booking.total_price %></p>

  </div>
</div>

