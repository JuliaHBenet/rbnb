<!-- Bookings user made -->

<div class="message bookings-element">
  <div class="image-cropper">
    <%= cl_image_tag booking.pet.photo.path, class:"dog-img"%>
  </div>
  <%= link_to "", pet_path(booking) %>
  <div class="message-name">
    <h5><%= booking.user.first_name %> <%= booking.user.last_name %></h5>
  </div>
  <div class="message-body">
    <h5>
      <%= booking.user.first_name %> <%= booking.user.last_name %> made a booking request for <%= booking.pet.name %>!
    </h5>
  </div>
  <div class="message-status">
    <% if  booking.status == 2 %>
      <% status = "Denied" %>
      <% statusclass = "denied" %>
    <% elsif booking.status == 1 %>
      <% status = "Accepted" %>
      <% statusclass = "accepted" %>
    <% else %>
      <% status = "Pending" %>
      <% statusclass = "pending" %>
    <% end %>
    <h5>Booking status: <h6 class=<%= statusclass %>><strong><%= status %></strong> </h6></h5>
    <h5 class="price">Booking price: <strong>â‚¬<%= booking.total_price %></strong></h5>
    <div class="buttons">
      <%= button_to "Accept", accept_booking_path(booking), class:"btn button accept", method: :patch %>
      <%= button_to "Decline", decline_booking_path(booking), class:"btn btn-danger button", method: :patch %>
    </div>
  </div>
  <span></span>
</div>

