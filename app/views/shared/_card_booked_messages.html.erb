<!-- Bookings user made -->

<div class="message bookings-element">
  <div class="image-cropper">
    <%= cl_image_tag booking.pet.photo.path, class:"dog-img"%>
  </div>
  <%= link_to "", pet_path(booking) %>
  <div class="message-name">
    <h5><%= booking.pet.name %></h5>
    <h6><%= booking.pet.category %></h6>
  </div>
  <div class="message-body">
    <h5>
    You requested <%= booking.user.first_name %> <%= booking.user.last_name %> to borrow <%= booking.pet.name %>!
    </h5>
  </div>
  <div class="message-status">
    <% if  booking.status == 2 %>
      <% status = "Denied" %>
      <% statusclass = "denied" %>
    <% elsif booking.status == 1 %>
      <% status = "Accepted" %>
      <% statusclass = "accepted" %>
    <% else %>
      <% status = "Pending" %>
      <% statusclass = "pending" %>
    <% end %>
    <h5>Booking status: <h6 class=<%= statusclass %>><strong><%= status %></strong> </h6></h5>
    <h5 class="price">Booking price: <strong>â‚¬<%= booking.total_price %></strong></h5>
  </div>
  <span></span>
</div>

