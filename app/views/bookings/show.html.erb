<div class="wrapper"
style = "background-image: url(https://st2.depositphotos.com/1106005/8685/i/950/depositphotos_86854464-stock-photo-green-and-white-dog-paw.jpg); min-height: 100vh">

<div class="container booking-content">
  <div class="row" style="border: 5px solid #005E5F; text-align: center; background-color: rgba(250,250,250,0.8)">

    <h1>Booking  for <%= @booking.pet.name.upcase %></h1>
    <br>
    <br>

    <div class="image-mask">
      <% if @pet.photo %>
      <%= cl_image_tag @pet.photo.path, class: "im2" %>
      <% else %>
      <img class="im2" src="https://unsplash.com/photos/8MbdD0pHXGY" alt="">
      <% end %>
    </div>
    <br>
    <br>
        <p style="text-align: center;"> <b> Pet:</b> <%= @booking.pet.name.upcase %></p>
    <div class="info">
      <div class="info1">
        <br>
        <p><b>Owner:</b> <%= @booking.pet.user.first_name %></p>
        <br>
        <p><b>Start date:</b> <%= @booking.start_date %></p>
        <p><b>End date:</b> <%= @booking.end_date %></p>
        <br>
      </div>
      <div class="info2">
        <br>
        <p><b>Price per day:</b> <%= @pet.daily_price %> €</p>
        <p><b>Number of days:</b> <%= (@booking.end_date - @booking.start_date).to_i %></p>
        <br>
        <p><b>TOTAL PRICE:</b> <%= @booking[:total_price] %> €</p>
      </div>
    </div>
    <br>
    <br>

    <%= link_to "Back to pet's profile", pet_path(@booking.pet), class: "dog-btn" %>

    <%= link_to "Back to your profile", user_path(current_user), class: "dog-btn" %>

  </div>
</div>
</div>
