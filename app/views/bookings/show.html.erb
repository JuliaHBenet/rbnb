<div class="container">

  <h1>Booking #<%= @booking.id %></h1>


  <p>Pet: <%= @booking.pet.name.upcase %></p>
  <p>Owner: <%= @booking.pet.user.first_name %></p>
  <p>Start date: <%= @booking.start_date %></p>
  <p>End date: <%= @booking.end_date %></p>
  <p>Price per day: <%= @pet.daily_price %> €</p>
  <p># of days: <%= (@booking.end_date - @booking.start_date).to_i %></p>
  <p>Total price: <%= @booking[:total_price] %> €</p>

  <%= link_to "Back to pet's profile", pet_path(@booking.pet), class: "btn btn-primary" %>

  <%= link_to "Back to your profile", user_path(current_user), class: "btn btn-primary" %>

</div>
