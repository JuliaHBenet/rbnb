<h1>Hello <%= @user.first_name %> <%= @user.last_name %>!</h1>

<div class="container">
  <div class="edit-profile">
    <% if current_user == @user %>
      <%= link_to "Edit profile", edit_users_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <h2>Your pets: </h2>
  <div class="row">
    <% if @user.owner %>
    <div class="col-xs-12 col-sm-4">
      <% @user.pets.each do |pet| %>
        <%= render 'shared/card_user', pet: pet%>
      <% end %>
    <% end %>
    </div>
  </div>
  <% if current_user == @user %>
    <%= link_to "Add a pet", new_pet_path, class: "btn btn-primary" %>
  <% end %>

  <h2>Your bookings: </h2>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10">
      <% Booking.where(:user_id == @user.id).each do |booking| %>
        <h2>
        <%= render 'shared/card_booking_messages', booking: booking %>
        </h2>
      <% end %>
    </div>
  </div>

  <h2> Your pet's bookings: </h2>

    <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10">
      <% Booking.where(:user_id == @user.id).each do |booking| %>
        <h2>
        <%= render 'shared/card_booked_messages', booking: booking %>
        </h2>
      <% end %>
    </div>
  </div>

   <!-- Booking.where(:pet_id == @user.pet.id).each do |booking| %> -->
   <!-- Booking.where(:pet_id == @pet.id).each do |booking| %> -->
 <!-- end %> end %> -->

  <%= link_to "Back to users", users_path, class: "btn btn-primary" %>
</div>



